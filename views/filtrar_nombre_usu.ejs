        <meta charset="UTF-8">
        <title>
            Cafe con preguntas
        </title>
    </head>
    
    <!-- La etiqueta body tenía id="scroll" -->
    
    <body>
    
        <%-include("header") %>
    
        <div id="fijo">
            <%-include("nav") %>
        </div>

        <div id="fondo">
            <div id="titulo_usu">
                <h1>Usuarios filtrados por ["<%= nombre%>"]</h1>
            </div>

            <form action="/usuarios/buscarUsuario" method="POST" id="buscarUsu">
                <input id="boton_filtrar" type="submit" value="Buscar">
                <input id="filtrar" type="text" name="searchUsu" placeholder="Filtrar por usuario">
            </form>
    
            <div class="grid_container">
                <% usuario.forEach(function(u){ %>
                    <%-include("card_usuario",{u:u,etiqueta:etiqueta}) %>
               <%}); %>

            </div>

        </div>

        </div>

    </body>

</html>