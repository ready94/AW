<!DOCTYPE html>
<html lang="es">

    <head>
        <link rel="stylesheet" type="text/css" media="screen" href="../css/filtrar_etiqueta.css">
        <link rel="icon" type="image/png" href="../img/icon1.png">
        <link href="https://fonts.googleapis.com/css2?family=Love+Ya+Like+A+Sister&display=swap" rel="stylesheet">
        <!--Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon"> www.flaticon.com</a> -->
        <!--Iconos diseñados por <a href="https://smashicons.com/" title="Smashicons">Smashicons</a> from <a href="https://www.flaticon.es/" title="Flaticon"> www.flaticon.es</a>-->
    
        <meta charset="UTF-8">
        <title>
            Café con preguntas
        </title>
    </head>
    
    <!-- La etiqueta body tenía id="scroll" -->
    
    <body>

        <header>
    
            <div id="cabecera">
                <div id="titulo">
                    <a href="/usuarios/pag_principal.html">
                        <h1>Café con preguntas</h1>
                    </a>
                </div>
    
                <div id="login">
    
                    <img src=<%= perfil.imagen %> id="icon">
                    <div id="usu">
    
                        <a href=<%="/usuarios/perfil_usu/" + perfil.id %> title="Perfil">
                            <h3 id="nick">
                                <%= perfil.nombre %>
                            </h3>
                        </a>
    
                        <a class="button" href="/login/logout" title="Cerrar sesion">
                            Cerrar sesión
                        </a>
    
                    </div>
                </div>
            </div>
    
        </header>
    
        <div id="fijo">
            <nav>
    
                <a class="button" href="/preguntas/preguntas.html" title="preguntas">
                    <b>PREGUNTAS</b>
                    <img src="../img/flecha-abajo.png">
                </a>
    
                <a class="button" href="/preguntas/sin_responder.html" title="preguntas sin responder">
                    <b>SIN RESPONDER</b>
                    <img src="../img/flecha-abajo.png">
                </a>
    
                <a class="button" href="/usuarios/usuarios.html" title="usuarios">
                    <b>USUARIOS</b>
                    <img src="../img/flecha-abajo.png">
                </a>
    
            </nav>
    
            <form action="/preguntas/buscarTexto" method="POST">
                <input id="boton_buscar" type="submit" value="Buscar">
                <input id="buscar" type="text" name="search" placeholder="Buscar por título/cuerpo de pregunta...">
            </form>
        </div>

        <div id="fondo">

            <div>
                <h1>Resultados de la etiqueta [<%= etiqueta%>]</h1>
            </div>
    
            <div id="barra_info">
                <div id="contador">
                    Preguntas <%= contador %>
                </div>
                <a class="button" href="/preguntas/formular_pregunta.html" title="formular">
                    <b>Formular una pregunta</b>
                </a>        
            </div>
    
            <ul>
                <% pregunta.forEach(function(p){ %>
                <li class="pregunta">
                    <div class="info_pregunta" > 
                        <a class="titulo_pregunta" href=<%="/respuestas/informacion_pregunta/"+ p.id_pregunta %>><%=p.titulo %></a>
                        
                        <div class="cuerpo"><%= p.cuerpo%></div>
                        
                        <div class="etiqueta_preguntas">
                            <%for(var x of p.etiqueta){ %> 
                            <a class="boton_etiqueta" href=<%="/preguntas/filtrar_etiqueta/" + x %>>
                                <%= x %> 
                            </a>
                            <% };%>
                           
                        </div>
                    
                    </div>
    
                    <div class="info_usu" >
                        <div class="fecha_usu">
                            Formulada el 
                            <%= p.fecha%>
                            
                        </div>
                        
                        <div class="imagen_usu">
                            <img  width="50" height="50" src=<%= p.imagen %>>
                        </div>
                        <a class="nombre_usu" href=<%="/usuarios/perfil_usu/"+ p.id_usuario %>>
                           <%= p.nombre%>
                        </a>
                         
                    </div>
                </li>
                <% }); %>
            </ul>
        </div>

    </body>

</html>