    <link href="https://fonts.googleapis.com/css2?family=Love+Ya+Like+A+Sister&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <title>
        Café con preguntas
    </title>
</head>

<body>

    <div>
        <div id="login">
            <div id="justificar">
                <header>
                    <h1>Café con preguntas</h1>
                    
                    <h1>Sign Up</h1>
                </header>
                
                <p id="error"><%= errorMsg%></p>

                <form action="/usuarios/crearCuenta" method="POST" enctype="multipart/form-data">
                    Correo*: <br>
                    <input type="email" name="mail" required><br>
                    Contraseña*:<br>
                    <input type="password" name="pass" minlength="6" required><br> Confirmar contraseña*: <br>
                    <input type="password" name="pass_confirm" minlength="6" required><br> Nombre para mostrar (Nick)*:<br>
                    <input type="text" name="nick" required> <br>
                    Imagen del perfil:<br>
                    <input type="file" name="icon" accept="jpeg,png"><br>
                    <input class="button" type="submit" value="Crear cuenta">
                </form>
                <a class="button" href="/usuarios/login.html"> Iniciar sesion </a>
           
            </div>
        </div>
    </div>
    
</body>

</html>