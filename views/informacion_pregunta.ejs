<!DOCTYPE html>
<html lang="es">

    <head>
        <link rel="stylesheet" type="text/css" media="screen" href="/css/informacion.css">
        <link rel="icon" type="image/png" href="/img/icon1.png">
        <link href="https://fonts.googleapis.com/css2?family=Love+Ya+Like+A+Sister&display=swap" rel="stylesheet">
        <!--Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon"> www.flaticon.com</a> -->
        <!--Iconos diseñados por <a href="https://smashicons.com/" title="Smashicons">Smashicons</a> from <a href="https://www.flaticon.es/" title="Flaticon"> www.flaticon.es</a>-->
    
        <meta charset="UTF-8">
        <title>
            Café con preguntas
        </title>
    </head>
    
    <!-- La etiqueta body tenía id="scroll" -->
    
    <body>
    
        <header>
    
            <div id="cabecera">
    
                <div id="titulo">
                    <a href="/usuarios/pag_principal.html">
                        <h1>Café con preguntas</h1>
                    </a>
                </div>
    
                <div id="login">
    
                    <img id="icon" src=<%= perfil.imagen %> >
                    <div id="usu">
    
                        <a title="Perfil" href=<%="/usuarios/perfil_usu/" + perfil.id %>>
                            <h3 id="nick">
                                <%= perfil.nombre %>
                            </h3>
                        </a>
    
                        <a class="button" href="/login/logout" title="Cerrar sesion">
                            Cerrar sesión
                        </a>
    
                    </div>
                </div>
            </div>

        </header>
    
        <div id="fijo">
            <nav>
    
                <a class="button" href="/preguntas/preguntas.html" title="preguntas">
                    <b>PREGUNTAS</b>
                    <img src="/img/flecha-abajo.png">
                </a>

                <a class="button" href="/preguntas/sin_responder.html" title="preguntas sin responder">
                    <b>SIN RESPONDER</b>
                    <img src="/img/flecha-abajo.png">
                </a>
    
                <a class="button" href="/usuarios/usuarios.html" title="usuarios">
                    <b>USUARIOS</b>
                    <img src="/img/flecha-abajo.png">
                </a>
    
            </nav>
    
            <form action="/preguntas/buscarTexto" method="POST">
                <input id="boton_buscar" type="submit" value="Buscar">
                <input id="buscar" type="text" name="search" placeholder="Buscar por título/cuerpo de pregunta...">
            </form>
        </div>

        <div id="fondo">

            <div>
                <h1><%= pregunta.titulo %></h1>
            </div>
    
            <div id="visitas">
                Visita <%= pregunta.visitas%>
            </div>

            <form action="/respuestas/votar" method="POST" onsubmit="enviar.disabled = true;" >
                <input type="hidden" name="id" value=<%= pregunta.id_pregunta %>>
                <input type="checkbox" value="ok" name="voto" id="votacion"> OK
                <input type="checkbox" value="ko" name="voto" id="votacion"/> no OK
                <input type="submit" name="enviar" value="Enviar">
            </form>
    
            <div class="votos">
                Votos a favooor/votooos en contraaa
            </div>
    
            <div id="pregunta">
                <div id="info_pregunta" > 
                    
                    <div id="cuerpo"><%= pregunta.cuerpo %></div>
                    
                    <div id="etiqueta_preguntas">
                       <% for(var x of pregunta.etiqueta){%>
                        <a id="boton_etiqueta" href=<%="/preguntas/filtrar_etiqueta/" + x %>>
                        <%= x %>
                        </a>
                        <% }; %>
                       
                    </div>
                
                </div>
    
                <div id="info_usu" >
                    <div class="fecha_usu">
                        Formulada el <%= pregunta.fecha%>
                    </div>
                    
                    <div class="imagen_usu">
                        <img  width="50" height="50" src=<%= pregunta.imagen %>>
                    </div>

                    <a id="nombre_usu" href=<%="/usuarios/perfil_usu/" + pregunta.id_usuario %>>
                        <%= pregunta.nombre%>
                    </a>
                    
                </div>
            </div>
    
            <div>
                Respuestas <%= contador%>
            </div>

            <ul>
                <% respuesta.forEach((r)=>{ %>
                <li class="respuesta">
                    <div class="info_respuesta" > 
                        
                        <div class="votos"> votos</div>
                        <div class="texto"><%= r.texto %></div>

                    </div>
        
                    <div id="info_usu" >
                        <div class="fecha_usu">
                            Respondida el <%= r.fecha_respuesta%>
                        </div>
                        
                        <div class="imagen_usu">
                            <img  width="50" height="50" src=<%= r.imagen %>>
                        </div>
    
                        <a class="nombre_usu" href=<%="/usuarios/perfil_usu/" + r.id_usuario %>>
                            <%= r.nombre%>
                        </a>
                                            
                    </div>
                </li>
                <%}); %>
            </ul>
            
            <div id="responder">
                <div>
                    Tu respuesta
                </div>

                <form method="POST" action="/respuestas/responderPregunta">
                    <textarea class="linea" name="texto" cols="73" rows="10" required></textarea><br>
                    <input type="hidden" name="id" value=<%= pregunta.id_pregunta %>>
                    <input class="button" type="submit" value="Publica tu respuesta">
                </form>
            </div>
            
        </div>
       
    </body>

</html>